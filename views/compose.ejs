<%- include("partials/header") -%>

    <h1>Compose</h1>
    <form action="/c" method="post">
        <div class="form-group">

            <label for="title" class="form-label">Title</label>
            <input id="title" type="text" class="form-control" name="postTitle">

            <label for="post" class="form-label">Post</label>
            <textarea id="post" type="text" class="form-control" name="postBody" rows="5"></textarea>

        </div>
        <button type="submit" name="button" class="btn btn-primary btn-lg">Publish</button>
    </form>

    <%- include("partials/footer") -%>